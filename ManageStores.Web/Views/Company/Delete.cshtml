@model Company

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br />
    <h2>Delete company</h2>
    <h5>Are you sure you want to delete this company?</h5>
    <br />
    <div>
        <table class="table table-bordered">

            <thead class="text-info">
                <tr>
                    <th>Name</th>
                    <th>Organization Number</th>
                    <th>Notes</th>
                </tr>
            </thead>
            <tbody>
            <tbody>
                <tr>
                    <td>@Model.Name</td>
                    <td>@Model.OrganizationNumber</td>
                    <td>@Model.Notes</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="form-group">
        <form asp-action="DeleteToConfirm">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            &nbsp;&nbsp;
            <a asp-action="Index" class="btn btn-warning">Cancel</a>
        </form>
        <br />
        <span style="font-size: 17px">Note: If this company owns stores, you must first delete these stores.</span>
    </div>
</div>