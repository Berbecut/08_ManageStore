@model Company

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-md-12">
        <div class="form-area">

            <form asp-action="Edit" asp-controller="Company" method="post">
                <div asp-validation-summary="All"></div>
                <br style="clear:both">
                <h3 style="margin-bottom: 25px; text-align: center;">Update company</h3>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="OrganizationNumber" class="control-label"></label>
                    <input asp-for="OrganizationNumber" class="form-control" />
                    <span asp-validation-for="OrganizationNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Notes" class="control-label"></label>
                    <input asp-for="Notes" class="form-control" />
                </div>

                <input asp-for="Id" type="hidden" class="form-control" />

                <div class="form-group">
                    <input type="submit" value="Save changes" class="btn btn-primary" />
                    &nbsp;&nbsp;
                    <a asp-controller="Company" asp-action="Index" class="btn btn-warning btn-md">Cancel</a>
                </div>
            </form>

        </div>
    </div>
</div>


