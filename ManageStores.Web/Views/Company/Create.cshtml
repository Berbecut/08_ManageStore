@model Company

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-md-12">
        <div class="form-area">

            <form asp-action="Create" asp-controller="Company" method="post">
                <br style="clear:both">
                <h3 style="margin-bottom: 25px; text-align: center;">Create new company</h3>


                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="OrganizationNumber" class="control-label"></label>
                    <input asp-for="OrganizationNumber" class="form-control" />
                    <span asp-validation-for="OrganizationNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Notes" class="ccontrol-label"></label>
                    <textarea asp-for="Notes" rows="12" cols="25" class="form-control"></textarea>
                </div>


                <div class="form-group">
                    <input type="submit" value="Save changes" class="btn btn-primary" />
                    &nbsp;&nbsp;
                    <a asp-controller="Company" asp-action="Index" class="btn btn-warning btn-md">Cancel</a>
                </div>

            </form>

        </div>
    </div>
</div>