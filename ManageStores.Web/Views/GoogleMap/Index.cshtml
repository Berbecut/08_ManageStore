
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-5">
            <div class="card shadow mb-3">
                <div class="card-header py-3">
                    <div class="d-sm-flex align-items-center justify-content-between mb-12">
                        <h6 class="h6 mb-0 text-gray-800">1. Display coordinates for your location</h6>
                        <button class="btn btn-info" onclick="getCurrentLocation()">Click here</button>
                    </div>
                </div>

                <div class="card-body">
                    <div class="table-responsive table-striped table-condensed">
                        <p1 id="result"></p1>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-7">
            <div class="card shadow mb-3">
                <div class="card-header py-3">
                    <div class="d-sm-flex align-items-center justify-content-between mb-12">
                        <h6 class="h6 mb-0 text-gray-800">2. Display address / coordinates from DataBase</h6>
                        <div class="col-md-6 text-center input-group" style="padding-bottom:1px">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputGroupSelect01">Select a store</label>
                            </div>

                            <select class="form-control" id="selectedValue" onchange="displayStore(this.value)">
                                <option value="">--- Select ---</option>
                                @foreach (var item in ViewBag.ListOfDropdown)
                                {
                                    <option value="Address: 
                                            @item.Address, @item.City, @item.Zip, @item.Country
                                        <br />
                                           Latitude, Longitude: @item.Latitude, @item.Longitude">@item.Name
                                </option>
                                }
                            </select>

                        </div>
                    </div>
                </div>

                <div class="card-body">

                    <div class="table-responsive table-striped table-condensed">
                        <p></p>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <div class="d-sm-flex align-items-center justify-content-between mb-12">
                        <h6>3. Insert coordinates to compare the address from DataBase with the address from Google</h6>
                        <div id="floating-panel">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">Latitude, Longitude</span>
                                    &nbsp;
                                    <input id="latlng" value="56.833245, 13.940824" type="text"
                                           class="form-control" placeholder="Username" aria-describedby="basic-addon1">
                                </div>
                                &nbsp;
                                <input id="submit" class="btn btn-info" type="button" value="Click to find address" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="table-responsive table-striped ">
                        <div class="d-sm-flex align-items-center justify-content-between mb-6" id="map"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

