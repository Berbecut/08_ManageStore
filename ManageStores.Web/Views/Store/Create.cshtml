@model Store

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="col-md-12">

        <div class="form-area">

            <p style="color:red">@ViewData["Warning"]</p> @*To be able to create a store, please create first a company (StoreController.cs)*@
            <p style="color:red">@ViewData["Position"]</p> @*GPS coordinates could not be identified. Please check again the store address (StoreController.cs)*@

            <form asp-action="Create" asp-controller="Store" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <br style="clear:both">
                <h3 style="margin-bottom: 25px; text-align: center;">Create new store</h3>

                <div class="form-group">
                    <label asp-for="CompanyId" class="control-label"></label>
                    <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyIdToSelect"></select>@*ViewBag - retrieve company list from DB(StoreController.cs)*@
                </div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Zip" class="control-label"></label>
                    <input asp-for="Zip" class="form-control" />
                    <span asp-validation-for="Zip" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Country" class="control-label"></label>
                    <input asp-for="Country" class="form-control" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <b> <label asp-for="Longitude">Longitude</label></b>
                    <input class="form-control" asp-for="Longitude" readonly />
                    <span asp-validation-for="Longitude" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <b> <label asp-for="Latitude">Latitude</label></b>
                    <input class="form-control" asp-for="Latitude" readonly />
                    <span asp-validation-for="Latitude" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save changes" class="btn btn-primary" />
                    &nbsp;&nbsp;
                    <a asp-controller="Store" asp-action="Index" class="btn btn-warning btn-md">Cancel</a>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
