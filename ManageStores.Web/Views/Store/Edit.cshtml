@model Store

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-md-12">
        <div class="form-area">

            <form asp-action="Edit" asp-controller="Store" method="post">

                <br style="clear:both">
                <h3 style="margin-bottom: 25px; text-align: center;">Update store</h3>

                <input asp-for="Id" type="hidden" class="form-control" />@*Id is retrieved from Store table from DB(StoreController.cs)*@

                <div class="form-group">
                    <label asp-for="CompanyId" class="control-label"></label>
                    <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyIdToSelect"></select>@*ViewBag - retrieve company list from DB(StoreController.cs)*@
                    <span asp-validation-for="CompanyId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Zip" class="control-label"></label>
                    <input asp-for="Zip" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Country" class="control-label"></label>
                    <input asp-for="Country" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <b> <label asp-for="Longitude">Longitude</label></b>
                    <input class="form-control" asp-for="Longitude" readonly/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <b> <label asp-for="Latitude">Latitude</label></b>
                    <input class="form-control" asp-for="Latitude" readonly/>
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>

                <div class="form-group">
                    <input type="submit" value="Save changes" class="btn btn-primary" />
                    &nbsp;&nbsp;
                    <a asp-controller="Store" asp-action="Index" class="btn btn-warning btn-md">Cancel</a>
                </div>
            </form>

        </div>
    </div>
</div>